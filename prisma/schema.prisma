// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id        Int    @id @default(autoincrement())
  name      String
  pis       String
  Apartment Apartamento?
}

model Dono {
  id          Int          @id @default(autoincrement())
  name        String
  cpf         String       @unique
  Apartamento Apartamento?
}

model Apartamento {
  id            Int         @id @default(autoincrement())
  number        Int
  flow          Int
  owner         Dono        @relation(fields: [ownerId], references: [id])
  ownerId       Int         @unique
  functionary   Funcionario @relation(fields: [functionaryId], references: [id])
  functionaryId Int         @unique
  building      Edificio    @relation(fields: [buildingId], references: [id])
  buildingId    Int         @unique
  visitas Visita?
}

model Edificio {
  id        Int @id @default(autoincrement())
  name      String
  apartment Apartamento?
}

model Visitante {
  id      Int    @id @default(autoincrement())
  name    String
  cpf     String @unique
  phone   String
  visitas Visita?
}

model Visita {
  id          Int         @id @default(autoincrement())
  visitor     Visitante   @relation(fields: [idVisistor], references: [id])
  idVisistor  Int         @unique
  apartment   Apartamento @relation(fields: [idApartment], references: [id])
  idApartment Int         @unique
}
